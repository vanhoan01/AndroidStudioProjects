<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".LibraryFragment">

    <LinearLayout
        android:id="@+id/linearLayoutTieuDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingRight="80dp"
            android:paddingVertical="3dp"
            android:text="Sách của bạn"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <Spinner
            android:id="@+id/spinnerSapXep"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </Spinner>
    </LinearLayout>
    <View
        android:id="@+id/viewKeNgang"
        android:layout_below="@+id/linearLayoutTieuDe"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA" />
    <ListView
        android:id="@+id/listviewThuVien"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewKeNgang"
        android:layout_marginTop="10dp"
        android:divider="@null" />

</RelativeLayout>