<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewHinh"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textViewTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageViewHinh"
        android:text="Ho va ten"
        android:textColor="#E91E63"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewMSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTen"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageViewHinh"
        android:text="Ma sinh vien"
        android:textColor="#3F51B5"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textViewLop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewMSV"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageViewHinh"
        android:text="Lop HP"
        android:textColor="#3F51B5"
        android:textSize="22sp" />
</RelativeLayout>