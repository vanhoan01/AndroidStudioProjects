<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".PopularFragment">

    <LinearLayout
        android:id="@+id/linearLayoutLoaiThinhHanh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/textViewBanChay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:text="Bán chạy nhất"
            android:textColor="#2196F3"
            android:textSize="16sp" />
        <View
            android:id="@+id/viewKeDoc"
            android:layout_width="1dp"
            android:layout_marginVertical="3dp"
            android:layout_height="match_parent"
            android:background="#EAEAEA" />
        <TextView
            android:id="@+id/textViewMienPhi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:text="Miễn phí phổ biến"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:id="@+id/viewKeNgang"
        android:layout_below="@+id/linearLayoutLoaiThinhHanh"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA" />
    <ListView
        android:id="@+id/listviewThinhHanh"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/viewKeNgang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null" />

</RelativeLayout>