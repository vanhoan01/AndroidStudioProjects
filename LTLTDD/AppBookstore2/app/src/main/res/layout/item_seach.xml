<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    >

    <LinearLayout
        android:id="@+id/search_keyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_chittiet_light"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:minHeight="56dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:drawableStart="@drawable/ic_clock" />

        <TextView
            android:id="@+id/search_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/googlesans_regular"
            android:text="text key"
            android:textColor="@color/c_00204A"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/search_arrowBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg_btn_arrow_up_left"
        android:src="@drawable/ic_akar_icons_arrow_up_left" />

</RelativeLayout>