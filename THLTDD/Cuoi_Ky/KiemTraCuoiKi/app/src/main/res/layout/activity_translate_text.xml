<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E6E6E6"
    style="@style/Apptheme.MaterialTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow"
            android:text="Languge Translator"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="40dp"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="18dp">
            <Spinner
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/IdFromSpinner"
                android:layout_margin="3dp"
                android:padding="3dp"/>
            <ImageView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_right_arrow"
                app:tint="@color/black"/>
            <Spinner
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/idToSpinner"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="3dp"/>

        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:hint="Source Text"
            android:padding="5dp"

            android:textColorHint="@color/black"
            app:hintTextColor="@color/black">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/idEditSource"
                android:ems="10"
                android:importantForAccessibility="no"
                android:inputType="textImeMultiLine|textMultiLine"
                android:textColor="@color/black"
                android:background="#FFF6A2"
                android:textColorHint="@color/black"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QR"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_mic"
            app:tint="@color/yellow"
            android:id="@+id/idTVMic"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Say Someting"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_gravity="center"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/idBtnTranslated"
            android:textAllCaps="true"
            android:text="Translate"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/btnScanner"
            android:textAllCaps="true"
            android:text="Capture"/>

        <TextView
            android:id="@+id/idTVTranslate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Translated Text"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textColor="#FF5722"
            android:textSize="18sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="20dp"
            android:id="@+id/recyclerviewLichSu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>